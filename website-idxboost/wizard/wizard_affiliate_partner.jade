                  input(type="text", name="", id="")
                li
                  label Last Name
                  input(type="text", name="", id="")
                li
                  label Phone
                  input(type="text", name="", id="")
                li
                  label Email
                  input(type="email", name="", id="")
                li
                  label Comments
                  textarea

              .idx-box-btn
                button.idx-btn-site
                  span Submit
      
