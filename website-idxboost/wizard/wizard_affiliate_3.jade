                    li.opt-content
                      input(type="radio", value="1", id="option1",name="radio")
                      label(for="option1") Monthly
                      |$59/mo
                    li.opt-content
                      input(type="radio", value="2", id="option2",name="radio")
                      label(for="option2") 6 Months
                      |Save 10%
                    li.opt-content.special-bold
                      input(type="radio", value="3", id="option3",name="radio", checked="checked")
                      label(for="option3") 1 Year
                      span $Save/15%
                li
                  .idx-pi-item
                    .idx-product
                      h2.opt-content
                        input(type="checkbox", value="4", id="option-1",name="radio-1")
                        label(for="option-1") Hosting
                        span.info-bubble ?
                          span.bubble-box
                            span.bubble-info Lorem Ipsum
                      span Have idxBoost host your website     
                  .idx-pi-item.t-head(data-text="Unit Price") $9/mo
                  .idx-pi-item.t-head(data-text="Subtotal") FREE
                li
                  .idx-pi-item
                    .idx-product
                      h2 MLS PASS-Though Access Fee
                        span.info-bubble ?
                          span.bubble-box
                            span.bubble-info Lorem Ipsum
